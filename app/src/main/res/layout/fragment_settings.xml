<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_settings_ad"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:overScrollMode="never"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <net.lucode.hackware.magicindicator.MagicIndicator
        android:id="@+id/mi_settings_ad"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/vp_settings_ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_settings_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="?android:dividerHorizontal"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vp_settings_ad">

        <RelativeLayout
            style="@style/ItemStyle">

            <ImageView
                android:id="@+id/iv_settings_scope"
                style="@style/ItemImageViewStyle"
                android:src="@drawable/ic_person"/>

            <TextView
                style="@style/ItemLeftTextStyle"
                android:layout_toRightOf="@id/iv_settings_scope"
                tools:text="姓名"/>

            <TextView
                style="@style/ItemRightTextStyle"
                tools:text="Tong"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/ItemStyle">

            <ImageView
                android:id="@+id/iv_settings_scope1"
                style="@style/ItemImageViewStyle"
                android:src="@drawable/ic_person"/>

            <TextView
                style="@style/ItemLeftTextStyle"
                android:layout_toRightOf="@id/iv_settings_scope1"
                tools:text="姓名"/>

            <TextView
                style="@style/ItemRightTextStyle"
                tools:text="Tong"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/ItemStyle">

            <ImageView
                android:id="@+id/iv_settings_scope2"
                style="@style/ItemImageViewStyle"
                android:src="@drawable/ic_person"/>

            <TextView
                style="@style/ItemLeftTextStyle"
                android:layout_toRightOf="@id/iv_settings_scope2"
                tools:text="姓名"/>

            <TextView
                style="@style/ItemRightTextStyle"
                tools:text="Tong"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="?android:dividerHorizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_settings_content"/>

</android.support.constraint.ConstraintLayout>